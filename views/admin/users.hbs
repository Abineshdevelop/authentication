<table class="table table-dark table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>
        <a href="/admin/edit/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
        <a href="/admin/delete/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
