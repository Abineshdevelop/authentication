<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - Dark Theme</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #121212;
      font-family: 'Segoe UI', sans-serif;
      color: #e0e0e0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .login-card {
      background-color: #1f1f1f;
      border-radius: 15px;
      padding: 2.5rem;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
      max-width: 400px;
      width: 100%;
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .form-control {
      background-color: #2c2c2c;
      color: #fff;
      border: 1px solid #444;
    }

    .form-control::placeholder {
      color: #bbb;
    }

    .form-control:focus {
      background-color: #333;
      border-color: #00bcd4;
      box-shadow: 0 0 0 0.2rem rgba(0, 188, 212, 0.25);
      color: #fff;
    }

    .btn-login {
      background: linear-gradient(to right, #00bcd4, #0097a7);
      border: none;
      height: 50px;
      border-radius: 10px;
      font-weight: bold;
      color: #fff;
      transition: 0.3s;
    }

    .btn-login:hover {
      background: linear-gradient(to right, #0097a7, #00bcd4);
    }

    .password-toggle {
      position: absolute;
      right: 1rem;
      top: 2.8rem;
      cursor: pointer;
      color: #ccc;
    }

    a {
      color: #00bcd4;
    }

    a:hover {
      color: #00e5ff;
      text-decoration: underline;
    }

    .text-muted {
      color: #ccc !important;
    }
  </style>
</head>

<body>

  <div class="login-card">
    <h2 class="text-center mb-3" style="color: #00bcd4;">Welcome Back</h2>
    <p class="text-center text-muted mb-4">Sign in to your account</p>

    <form id="loginForm" method="POST" action="/user/login" novalidate>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email">
      </div>

      <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
        <i class="bi bi-eye password-toggle" onclick="togglePassword()"></i>
      </div>
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-login">Sign In</button>
      </div>

      <div class="text-center mt-3">
        <a href="/user/register">Register</a>
        <span style="color: #ccc;">New user </span>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>

    const message = '{{message}}';
    const type = '{{type}}';

    if (message && message.trim() !== '') {

  if (message && message.trim() !== '') {
    Swal.fire({
      icon: type || 'info',
      title: type === 'success' ? 'Success' :
             type === 'error' ? 'Error' :
             'Notice',
      text: message,
      background: "#1f1f1f",
      color: "#e0e0e0",
      iconColor: type === 'success' ? "#00e676" :
                 type === 'error' ? "#ff5252" :
                 "#00bcd4",
      confirmButtonColor: "#00bcd4",
      timer: type === 'success' ? 2000 : undefined,          
      timerProgressBar: type === 'success' ? true : false,  
      showConfirmButton: type === 'success' ? false : true 
    });
  }
    }


  </script>
  <script>
    document.getElementById('loginForm').addEventListener('submit', function (e) {
      e.preventDefault();


      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value.trim();

      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!email || !emailRegex.test(email)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Email',
          text: 'Please enter a valid email address.',
          background: '#1f1f1f',
          color: '#e0e0e0',
          iconColor: '#00bcd4',
          confirmButtonColor: '#00bcd4'
        });
        return;
      }

      if (!password || password.length < 4) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Password',
          text: 'Password must be at least 4 characters long.',
          background: '#1f1f1f',
          color: '#e0e0e0',
          iconColor: '#00bcd4',
          confirmButtonColor: '#00bcd4'
        });
        return;
      }

      this.submit();
    });
  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById("password");
      const toggleIcon = document.querySelector(".password-toggle");
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
      toggleIcon.classList.toggle("bi-eye");
      toggleIcon.classList.toggle("bi-eye-slash");
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const message = urlParams.get('message');
  </script>


</body>

</html>